<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/lineta1"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textNamaLengkapTamabAnggota"
                style="@style/parent">

                <EditText
                    android:id="@+id/et_namalengkapTamabahAnggota"
                    style="@style/modifiedEditText"
                    android:hint="Nama Lengkap"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textNmrWhatsappTambahAnggota"
                style="@style/parent"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_nmrWhatsAppTambahAnggota"
                    style="@style/modifiedEditText"
                    android:hint="Nomer WhatsApp"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textKotaTambahAnggota"
                style="@style/parent"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_kotaTambahAnggota"
                    style="@style/modifiedEditText"
                    android:hint="Kota"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_rectangle" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textUsernameTambahAnggota"
                style="@style/parent"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_usernameTambahAnggota"
                    style="@style/modifiedEditText"
                    android:hint="Username"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textPasswordTambahAnggota"
                style="@style/parent"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_passwordTambahAnggota"
                    style="@style/modifiedEditText"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>



    </ScrollView>

    <LinearLayout
        android:id="@+id/lineta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnTamabahDataAnggota"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/btngreen"
            android:text="Tambah Anggota"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>



</RelativeLayout>

