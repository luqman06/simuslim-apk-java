<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.menu_pengaturan.PengaturanFragment">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bgpengaturan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lr1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImgPengaturan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_simuslim" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lr2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/lr1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_namePengaturan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Ahmad Riyadi"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_edit" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_pekerjaanPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buruh"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_lokasiPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/orangelokasi"
                android:gravity="center_vertical"
                android:text=" Kabupaten Bantul" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/logout_pengaturan1"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btngreen"
                    android:backgroundTint="@color/colorOrg"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </RelativeLayout>




        </LinearLayout>


    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="50dp">


    <LinearLayout
        android:id="@+id/lr3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bgpengaturan"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tentangAplikasi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_tentang_aplikasi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tentangAplikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang Aplikasi"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_atribut_tautan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_atributTauatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atribut Tautan"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

    <LinearLayout
        android:id="@+id/lr4"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/lr3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinergi Muslim v.1"
            android:textAlignment="center"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created by Pondok Programmer"
            android:textAlignment="center" />

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/logout_pengaturan2"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btngreen"
            android:backgroundTint="@color/colorOrg"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </RelativeLayout>


</LinearLayout>